#include <stdio.h>

int main()
{
   int p,j;
   printf("enter no. of processes\n");
   scanf("%d",&p);
   int pro[p];
   int at[20];
   int bt[20];
   int ct[20];
   int tat[20];
   int wt[20];
   int i;
   for(i=0;i<p;i++)
   {
       printf("AT and BT for p%d\n",i);
       scanf("%d",&at[i]);
       scanf("%d",&bt[i]);
   }
   for(i=0;i<p;i++)
   {
       for(j=i+1;j<p;j++)
       {
        if(at[i]>at[j])
        {
            int temp1,temp2;
            temp1 = at[j];
            at[j] = at[i];
            at[i] = temp1;
            temp2=bt[j];
            bt[j]=bt[i];
            bt[i]=temp2;
        }
       }
   }
   int x=0;
   printf("AT\tBT\tCT\tTAT\tWT\n");
   for(i=0;i<p;i++)
   {
       printf("%d\t%d\t",at[i],bt[i]);
       if(i==0){
       ct[0] = at[0]+bt[0];}
       if(i>0){
       ct[i] = bt[i] + ct[i-1];}
       printf("%d\t",ct[i]);
       tat[i]=ct[i]-at[i];
       printf("%d\t",tat[i]);
       wt[i]=tat[i]-bt[i];
       printf("%d\n",wt[i]);
   }
  
}

